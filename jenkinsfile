pipeline {
    agent any

    environment {
        COMPOSE_FILE = 'docker-compose.yml'
    }

    stages {
        stage('Checkout') {
            steps {
                // Obtiene el c√≥digo fuente del proyecto
                git 'https://github.com/imzzaidd/phpunit-selenium.git'
            }
        }

        stage('Build and Start Containers') {
            steps {
                script {
                    // Construye y levanta los servicios definidos en docker-compose.yml
                    sh 'docker-compose up -d --build'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Ejecuta las pruebas en el servicio phpunit
                    sh 'docker-compose run phpunit'
                }
            }
        }

        stage('Stop and Remove Containers') {
            steps {
                script {
                    // Detiene y elimina los contenedores y redes creados por docker-compose
                    sh 'docker-compose down'
                }
            }
        }
    }

    post {
        always {
            // Limpia cualquier contenedor y recursos sobrantes en caso de fallo
            script {
                sh 'docker-compose down --volumes --remove-orphans'
            }
        }
        success {
            echo 'Tests completed successfully.'
        }
        failure {
            echo 'Tests failed.'
        }
    }
}
